<div class="random-beer-card">

    {{#each responseFromAPI}}
    
    <div>
        <img src="{{image_url}}"/>
    </div>

    <div class="random-beer-content">
        <li><h1>{{name}}</h1></li>
        <li><strong>Description: </strong>{{description}}</li>
        <li class="tagline">{{tagline}}</li>
        <li>
            <h2>Food Pairing</h2>
                <ul class="food-pairing">
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
                </ul>
        </li>
        <li><strong>Brewers Tips:</strong>{{brewers_tips}}</li>
    </div>
    
    
    
    
    {{/each}}
    
</div>